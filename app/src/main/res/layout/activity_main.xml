<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<TextView
    android:id="@+id/red"
    android:text="RED"
    android:textSize="40sp"
    android:textColor="#ffffff"
    android:background="#ef0a24"
    android:layout_alignLeft="@id/blue"
    android:layout_above="@id/green"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/green"
        android:text="GREEN"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#29e03b"
        android:layout_above="@id/blue"
        android:layout_alignLeft="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blue"
        android:text="BLUE"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#3685e9"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/organe"
        android:text="ORGANE"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#d1a635"
        android:layout_below="@id/blue"
        android:layout_alignLeft="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gray"
        android:text="GRAY"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#959392"
        android:layout_below="@id/organe"
        android:layout_alignLeft="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="PINK"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#e01cbe"
android:layout_below="@id/gray"
        android:layout_alignLeft="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>