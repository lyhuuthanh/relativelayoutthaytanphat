<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="1"
        android:textSize="40sp"
        android:background="#ef0a24"
        android:layout_above="@+id/so2"
        android:layout_toLeftOf="@id/so2"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="2"
        android:id="@+id/so2"
        android:textSize="40sp"
        android:background="#29e03b"
        android:layout_above="@+id/so3"
        android:layout_toLeftOf="@id/so3"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="3"
        android:id="@+id/so3"
        android:textSize="40sp"
        android:background="#b7ab33"
        android:layout_above="@+id/so4"
        android:layout_toLeftOf="@id/so4"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="4"
        android:id="@+id/so4"
        android:textSize="40sp"
        android:background="#96146e"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/so5"
        android:text="5"
        android:textSize="40sp"
        android:background="#8f625c"
        android:layout_below="@+id/so4"
        android:layout_toLeftOf="@id/so4"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="6"
        android:id="@+id/so6"
        android:textSize="40sp"
        android:background="#946a30"
        android:layout_below="@+id/so5"
        android:layout_toLeftOf="@id/so5"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="7"
        android:textSize="40sp"
        android:background="#46d9ad"
        android:layout_below="@+id/so6"
        android:layout_toLeftOf="@id/so6"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>