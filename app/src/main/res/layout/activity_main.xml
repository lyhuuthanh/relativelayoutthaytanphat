<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:text="6"
       android:textSize="40sp"
       android:textColor="#ffffff"
       android:background="#946a30"
       android:paddingHorizontal="40dp"
       android:paddingVertical="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:text="7"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#47daae"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="8"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#224d82"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="9"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#eb992b"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="1"
        android:id="@+id/so1"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#fd2400"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="2"
        android:id="@+id/so2"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#2a9543"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/so1"
        android:layout_toLeftOf="@+id/so1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="3"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#b7ab33"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_centerInParent="true"
android:layout_below="@id/so1"
        android:layout_toLeftOf="@id/so1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="4"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#96146e"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_centerInParent="true"
android:layout_above="@id/so1"
        android:layout_toRightOf="@id/so1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="5"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#8f625c"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/so1"
android:layout_toRightOf="@id/so1"        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>